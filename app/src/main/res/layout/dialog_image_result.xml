<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_dialog_background"
    android:gravity="center"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imageResult"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/diseaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/accuracyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confidence: 80%"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Beautiful Recommendations Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/recommendationsButton"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:text="Recommendations"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="4dp"
        app:icon="@drawable/ic_recommendations"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:letterSpacing="0.025"
        android:stateListAnimator="@animator/button_state_list_animator" />

</LinearLayout>
