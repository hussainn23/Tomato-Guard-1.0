<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="200">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C4FFBB" />
            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="1dp" android:color="#66aaaaaa" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/usr_chat_back" />
            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="1dp" android:color="#66aaaaaa" />
        </shape>
    </item>

</selector>